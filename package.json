  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.1",
    "@antfu/ni": "^0.21.12",
    "@types/debug": "^4.1.12",
    "@types/micromatch": "^4.0.8",
    "@types/node": "^20.14.9",
    "bumpp": "^9.4.1",
    "eslint": "^9.5.0",
    "rollup": "^4.18.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
